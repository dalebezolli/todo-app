<mvc:View 
    controllerName="com.bezolli.primary.controller.Home"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    displayBlock="true">
    <Page id="page" title="{i18n>title}">
        <content>
            <f:FlexibleColumnLayout>
                <f:beginColumnPages>
                    <f:DynamicPage>
                        <f:content>
                            <Text text="Test" />
                        </f:content>
                    </f:DynamicPage>
                </f:beginColumnPages>       
            </f:FlexibleColumnLayout>


            <Panel id="list" content="{/TodoList}" backgroundDesign="Transparent">
                <content>
                    <GenericTile header="{name}" press=".displayDetails" class="sapUiSmallMargin" />
                </content>
            </Panel>

            <List id="details">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="List Details" />
                    </OverflowToolbar>
                </headerToolbar>
                <items />
            </List>
        </content>
    </Page>
</mvc:View>
