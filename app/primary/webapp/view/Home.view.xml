<mvc:View 
    controllerName="com.bezolli.primary.controller.Home"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    displayBlock="true">
        <SplitContainer id="container" mode="HideMode">
            <masterPages>
                <Page showHeader="false" backgroundDesign="List">
                    <List id="details">
                        <headerToolbar>
                            <OverflowToolbar>
                                <Title id="detailsTitle" text="List Details" />
                            </OverflowToolbar>
                        </headerToolbar>
                        <items />
                    </List>
                </Page>
            </masterPages>
            <detailPages>
                <Page showHeader="false">
                    <content>
                        <Panel id="list" content="{/TodoList}" backgroundDesign="Transparent">
                            <content>
                                <GenericTile header="{name}" press=".displayDetails" class="sapUiSmallMargin" />
                            </content>
                        </Panel>
                    </content>
                </Page>
            </detailPages>
        </SplitContainer>
</mvc:View>
