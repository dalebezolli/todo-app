<mvc:View 
    controllerName="com.bezolli.primary.controller.Home"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.f"
    displayBlock="true">
        <SplitContainer id="container" mode="HideMode">
            <masterPages>
                <Page showHeader="true" backgroundDesign="List">
                    <customHeader>
                        <OverflowToolbar>
                            <Title id="detailsTitle" text="List Details" />
                            <ToolbarSpacer />
                            <Button icon="sap-icon://add" text="New Todo" type="Transparent" press=".onCreateTodo" />
                            <OverflowToolbarButton icon="sap-icon://edit" text="Edit" type="Transparent">
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="AlwaysOverflow" />
                                </layoutData>
                            </OverflowToolbarButton>

                            <OverflowToolbarButton icon="sap-icon://delete" text="Delete" type="Transparent">
                                <layoutData>
                                    <OverflowToolbarLayoutData priority="AlwaysOverflow" />
                                </layoutData>
                            </OverflowToolbarButton>
                        </OverflowToolbar>
                    </customHeader>                   

                    <Table id="details">
                        <columns>
                            <Column width="3rem" />
                            <Column/>
                            <Column hAlign="End"/>
                        </columns>
                        <items/>
                    </Table>
                </Page>
            </masterPages>

            <detailPages>
                <Page showHeader="false">
                    <content>
                        <Button 
                            text="New List" 
                            icon="sap-icon://add" 
                            type="Emphasized" 
                            class="sapUiMediumMarginBegin sapUiTinyMarginTop" 
                            press=".onCreateList" />

                        <Panel id="list" content="{/TodoList}" backgroundDesign="Transparent">
                            <content>
                                <GenericTile header="{name}" press=".onDisplayTodoListDetails" class="sapUiSmallMargin" />
                            </content>
                        </Panel>
                    </content>
                </Page>
            </detailPages>
        </SplitContainer>
</mvc:View>
