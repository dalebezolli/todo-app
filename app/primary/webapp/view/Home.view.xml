<mvc:View controllerName="com.bezolli.primary.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <Panel id="list" content="{/TodoList}" backgroundDesign="Transparent">
                <content>
                    <GenericTile header="{name}" press=".displayDetails" class="sapUiSmallMargin" />
                </content>
            </Panel>

            <List id="details">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="List Details" />
                    </OverflowToolbar>
                </headerToolbar>
                <items />
            </List>
        </content>
    </Page>
</mvc:View>
